<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yelp Camp | Home</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-left mb-4">Yelp Camp</h3>
          <nav class="nav nav-masthead justify-content-evenly float-md-right">
            <a href="#" aria-current="page" class="nav-link active">Home</a>
            <a href="/campgrounds" class="nav-link">Campgrounds</a>
            <% if (!currentUser) {%>
            <a href="/login" class="nav-link">Login</a>
            <a href="/register" class="nav-link">Sign Up</a>
            <% } else { %>
            <a href="/logout" class="nav-link">Logout</a>
            <% } %>
          </nav>
        </div>
      </header>
      <main class="px-3">
        <h1>YelpCamp</h1>
        <p class="lead">
          Welcome to Yelp Camp! <br />
          <span id="text-content">
            Jump right in and explore our many campgrounds. <br />
            Feel free to share some of your own and comment on others!
          </span>
        </p>
        <a
          href="/campgrounds"
          id="btn-home"
          class="btn btn-lg text-nowrap btn-secondary font-weight-bold border-white text-dark bg-white"
          >View Campgrounds</a
        >
      </main>

      <footer class="mt-auto text-white-50">
        <p>&copy; 2020 YelpCamp</p>
      </footer>
    </div>

    <script src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>
